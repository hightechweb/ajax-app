<!DOCTYPE html>
<html>
<head>
  <title>AjaxApp</title>
<!-- [if lt IE 9]>
	<script src="https://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
<![endif] -->
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<%= render "layouts/header" %>

<div class="container"><!-- Container -->

  <!-- Flash Message Validation w/TWBS -->
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == :notice ? 'success' : 'warning' %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= msg %> A
    </div>
  <% end %>
  <!-- Flash messages Pending ALRT, need to integrate notice above into one -->
  <% if alert %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= alert %> B
    </div>
  <% end %>
  <% if notice %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %> C
    </div>
  <% end %>
  <!-- Flash Message end -->


<!-- If user logged in, show logout links. Else, show log in links -->
<% if current_user %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to "Login", new_user_session_path %>
<% end %>



  <%= yield %>
</div><!-- Container -->

</body>
</html>
