<%= simple_form_for(@post, remote: true, :html => { :role => "form", :class => "form-horizontal" }) do |f| %>
  <%= f.error_notification %>
<div id="error_display"></div>

  <%= f.input :title  %>
  <%= f.input :content %>

<div class="modal-footer">
  <button type="button" class="btn btn-default" id="modal-close" data-dismiss="modal">Close</button>
  <%= f.button :submit, @post.new_record? ? "Create Post" : "Update Post", :class => "btn btn-primary" %>
</div>


<% end %>
